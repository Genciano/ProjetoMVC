@model AlunoModel

<form asp-controller="Alunos" asp-action="InserirAluno" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control col-md-6">
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Idade</label>
        <input type="text" asp-for="Idade" class="form-control col-md-1">
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control col-md-4">
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control col-md-4">
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Cep</label>
        <input type="text" asp-for="Cep" class="form-control col-md-4">
    </div>

    <div class="tex-center">
        <button class="btn btn-primary" type="submit">Adicionar</button>
        <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Index">Voltar</a>
    </div>


</form>





